<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow android:layout_weight="0.5">

        <Button
            android:id="@+id/B1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffff0000" />

        <Button
            android:id="@+id/B2"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffff9800" />
    </TableRow>

    <TableRow android:layout_weight="0.5">

        <Button
            android:id="@+id/B3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ff4285f4" />

        <Button
            android:id="@+id/B4"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ff0f9d58" />
    </TableRow>


    <TableRow android:layout_weight="0.5">

        <Button
            android:id="@+id/B5"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ff7b1fa2" />

        <Button
            android:id="@+id/B6"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ff9e9e9e" />
    </TableRow>

    <TableRow android:layout_weight="0.2">


        <Button
            android:id="@+id/B7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Back" />

        <TextView
            android:id="@+id/T1"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="Messages" />

        <TextView
            android:id="@+id/T2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Sores" />



    </TableRow>
</TableLayout>